<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScenicPlots.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="appcolor">#036DF8</Color>
            <Color x:Key="appwhite">#FFFFFF</Color>

            <Style x:Key="appButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource appcolor}" />
                <Setter Property="TextColor" Value="{StaticResource appwhite}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>